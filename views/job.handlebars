<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title">Job Details</h1>

                    {{#if acceptedUserId}}
                        <p>This job has been claimed by</p>
                        <a href="/sitter/{{acceptedUserId}}">{{acceptedUserName}}</a>
                    {{/if}}

                    <div class="mt-4">
                        <h2>Description</h2>
                        <p>{{job.description}}</p>
                    </div>

                    <div class="mt-4">
                        <h2>Children</h2>
                        {{#each children as |child|}}
                        <div class="mb-2">
                            <p>Age: {{child.age}}</p>
                            <p>Name: {{child.name}}</p>
                        </div>
                        {{/each}}
                    </div>

                    {{#if isSitter}}
                    <div class="mt-4">
                        <button id="interest-sitter" class="btn btn-primary">Apply</button>
                        <div id="user-id" data-id="{{userId}}"></div>
                        <script defer src="/js/jobForSitter.js"></script>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="mt-4">
                        <h2>Interested Sitters</h2>
                        <ul>
                            {{#each interestedSitters as |sitter|}}
                            <li>
                                <a href="/sitter/{{sitter.id}}">{{sitter.userName}}</a>
                                {{#if ../loggedIn}}
                                    {{#isJobOwner ../userId ../jobOwnerId}}
                                        <button class="accept-sitter btn btn-primary" data-sitter-id="{{sitter.id}}">Accept</button>
                                    {{else}}
                                    {{/isJobOwner}}
                                {{/if}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-12">
            <h2>Job Instructions</h2>
            <p>{{job.instructions}}</p>
        </div>
    </div>
<div class="card">
    <div class="card-body">
        {{#if loggedIn}}
            <div id="job-id" data-id="{{job.id}}"></div>
            <div id="user-name" data-name="{{userName}}"></div>
            {{#showChat jobOwnerId userId acceptedUserId}}
                <style>
                    #chat-window {
                        width: 100%;
                        height: 300px;
                        overflow-y: scroll;
                    }
                </style>
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <h2>Messages</h2>
                        <div id="chat-window">
                            <!-- Messages populate here -->
                        </div>
                        <form id="chat-form">
                            <div class="input-group">
                                <input type="text" id="chat-box" class="form-control">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <script defer src="/socket.io/socket.io.js"></script>
                <script defer src="/js/chat.js"></script>
            {{else}}
     
            {{/showChat}}
        {{/if}}
        {{#unless isSitter}}
            <script src="/js/jobForParent.js"></script>
        {{/unless}}
    </div>
</div>