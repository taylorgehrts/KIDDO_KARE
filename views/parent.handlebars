<div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">Parent Profile</h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <h2>User Name</h2>
                <p>{{user.userName}}</p>
                
                <h2>Full Name</h2>
                <p>{{user.firstName}} {{user.lastName}}</p>
                
                <h2>Address</h2>
                <p>{{user.address}}</p>
                
                <h2>Bio</h2>
                <p>{{user.bio}}</p>
            </div>
            <div class="col-md-6">
                <h2>Children</h2>
                <ul class="list-group">
                    {{#each children as |child|}}
                        <li class="list-group-item">
                            <h4>Name</h4>
                            <p>{{child.name}}</p>
                            
                            <h4>Age</h4>
                            <p>{{child.age}}</p>
                        </li>
                    {{/each}}
                </ul>
                
                {{#if ownProfile}}
                    <div class="mt-4">
                        <a href="/edit" class="btn btn-primary">Edit Profile</a>
                        <a href="/add" class="btn btn-success">Add Child</a>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>