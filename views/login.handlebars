<div class="container vh-100">
    <div class="row justify-content-center h-100">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Sign In</h2>
            <form class="form signin-form" id="login-form">
              <div class="form-group">
                <label for="username-signin">Username:</label>
                <input class="form-control" type="text" id="username-signin" name="userName"/>
              </div>
              <div class="form-group">
                <label for="password-signin">Password:</label>
                <input class="form-control" type="password" id="password-signin" name="password"/>
              </div>
              <div class="form-group mt-2">
                <button class="btn btn-primary" type="submit">Sign In</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6 mt-1">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Create Account</h2>
            <form class="form signup-form">
              <div class="form-group">
                <label for="username-signup">Username:</label>
                <input class="form-control" type="text" id="username-signup" />
              </div>
              <div class="form-group">
                <label for="email">Email:</label>
                <input class="form-control" type="email" id="email" />
              </div>
              <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-control" type="password" id="password-signup" />
              </div>
              <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input class="form-control" type="tel" id="phone" />
              </div>
              <div class="form-group d-flex justify-content-center mt-3 d-grid gap-2">
                <div class="form-check">
                  <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse"
                    data-bs-target=".parent-fields" aria-expanded="false" aria-controls="parent-fields">Click for Parent</button>
                </div>
                
                <div class="form-check ms-3">
                  <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse"
                    data-bs-target=".sitter-fields" aria-expanded="false" aria-controls="sitter-fields">Click for babysitter?</button>
                </div>
              </div>
               <div class="collapse parent-fields">
                <!-- Parent-specific fields -->
                <div class="form-group">
                  <label for="address">Address:</label>
                  <input class="form-control" type="text" id="address" />
                </div>
                <div class="form-group">
                  <label for="num-children">Number of Children:</label>
                  <input class="form-control" type="number" id="num-children" />
                </div>
                <div class="form-group">
                  <label for="ages">Ages of Children:</label>
                  <input class="form-control" type="text" id="ages" />
                </div>
                <div class="form-group">
                  <label for="dietary-restrictions">Dietary Restrictions:</label>
                  <input class="form-control" type="text" id="dietary-restrictions" />
                </div>
                <div class="form-group">
                  <label for="children-names">Children Names:</label>
                  <input class="form-control" type="text" id="children-names" />
                </div>
                <div class="form-group">
                  <label for="bed-time">Bed Time:</label>
                  <input class="form-control" type="text" id="bed-time" />
                </div>
              </div>
             <div class="collapse sitter-fields">
                <!-- Sitter-specific fields -->
                <div class="form-group">
                  <label for="sitter-address">Address:</label>
                  <input class="form-control" type="text" id="sitter-address" />
                </div>
                <div class="form-group">
                  <label for="age">Age:</label>
                  <input class="form-control" type="number" id="age" />
                </div>
                <div class="form-group">
                  <label for="certifications">Certifications:</label>
                  <input class="form-control" type="text" id="certifications" />
                </div>
                <div class="form-group">
                  <label for="experience">Experience (Years Sitting):</label>
                  <input class="form-control" type="number" id="experience" />
                </div>
                <div class="form-group">
                  <label for="qualifications">Qualifications:</label>
                  <input class="form-control" type="text" id="qualifications" />
                </div>
              </div>
              <div class="form-group justify-content-center">
                <button class="btn btn-primary" type="submit">Sign Up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


<a href="/signup">Sign up here</a>

<script src="/js/login.js"></script>

