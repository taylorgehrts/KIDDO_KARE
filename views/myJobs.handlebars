<div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Jobs for {{userName}}</h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="d-grid gap-2">
                    {{#each jobs as |job|}}
                        <a href="/job/{{job.id}}" class="btn btn-primary btn-lg btn-block">{{job.description}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>